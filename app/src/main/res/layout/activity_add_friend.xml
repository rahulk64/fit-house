<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFriendActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginTop="6dp">

    </RelativeLayout>

    <Button
        android:id="@+id/runOptionsBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="155dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_x="256dp"
        android:layout_y="496dp"
        android:text="Add"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="640dp" />

    <Button
        android:id="@+id/cancelOptionsBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="160dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_x="0dp"
        android:layout_y="492dp"
        android:text="cancel"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="638dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_x="57dp"
        android:layout_y="199dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Username"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="556dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_x="57dp"
        android:layout_y="265dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="556dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_x="57dp"
        android:layout_y="135dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="556dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="58dp"
        android:layout_y="53dp"
        android:text="Find Friend"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="65dp" />


</AbsoluteLayout>